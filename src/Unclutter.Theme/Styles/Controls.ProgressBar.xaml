<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Unclutter.Theme;component/Base.xaml" />
        <ResourceDictionary Source="/Unclutter.Theme;component/Brush.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="Style.ProgressBar.Linear"
           TargetType="{x:Type ProgressBar}"
           BasedOn="{StaticResource MaterialDesignLinearProgressBar}">
        <Setter Property="material:TransitionAssist.DisableTransitions"
                Value="True" />
    </Style>

    <Style x:Key="Style.ProgressBar.Circular"
           TargetType="{x:Type ProgressBar}"
           BasedOn="{StaticResource MaterialDesignCircularProgressBar}">
        <Setter Property="material:TransitionAssist.DisableTransitions"
                Value="True" />
    </Style>

</ResourceDictionary>